
......>BUBBLE SHORT<......
Enter your number : 
5
Enter a number : 
1 5 8 4 6
1 4 5 6 8 


#include<iostream>
using namespace std;
void bubbleSort(int arr[],int n)
{
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(arr[j],arr[j+1]);
            }
        }
    }
}


void printArray(int arr[],int n)
{
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }// }cout<<endl;
}


int main()
{
int n;
cout<<"Enter your number : \n";
cin>>n;
int arr[n];
cout<<"Enter a number : \n";
for(int i=0;i<n;i++)
{
    cin>>arr[i];
}

bubbleSort(arr,n);
printArray(arr,n);
    return 0;
}











Enter your number :
6
Enter a number :
1 2 3 4 5 6
6 5 4 3 2 1



#include<iostream>
using namespace std;
void bubbleSort(int arr[],int n)
{
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(arr[j],arr[j+1]);
            }
        }
    }
}


void printArray(int arr[],int n)
{
    for(int i=n-1;i>=0;i--)
    {
        cout<<arr[i]<<" ";
    }// }cout<<endl;
}


int main()
{
int n;
cout<<"Enter your number : \n";
cin>>n;
int arr[n];
cout<<"Enter a number : \n";
for(int i=0;i<n;i++)
{
    cin>>arr[i];
}

bubbleSort(arr,n);
printArray(arr,n);
    return 0;
}
